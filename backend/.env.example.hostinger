# ====================================
# Ejemplo de .env para Hostinger
# ====================================
# Copiar este archivo como .env en el servidor
# NO subir credenciales reales a Git

APP_NAME="Tienda Multi-tenant"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=https://tudominio.com

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error

# Base de datos CENTRAL (configurar en hPanel)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nombre_bd_central
DB_USERNAME=usuario_bd
DB_PASSWORD=

# Prefijo para bases de datos de tenants
TENANT_DB_PREFIX=tenant_
TENANT_DB_HOST=localhost
TENANT_DB_USERNAME=usuario_bd
TENANT_DB_PASSWORD=

# Sesiones y Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=database

# Mail (configurar seg√∫n proveedor)
MAIL_MAILER=smtp
MAIL_HOST=smtp.tuproveedor.com
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@tudominio.com
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem
FILESYSTEM_DISK=public
